<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color"
    android:padding="30dp"
    tools:context=".activity_upload">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Upload Car Data"
                        android:textSize="30sp"
                        android:textAlignment="center"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/uploadName"
                        android:layout_marginTop="10dp"
                        android:padding="16dp"
                        android:hint="Car Name"
                        android:gravity="start|center_vertical"
                        android:inputType="text"
                        android:maxLength="40"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/uploadRegisterNo"
                        android:layout_marginTop="10dp"
                        android:padding="16dp"
                        android:hint="Car Registration Number"
                        android:gravity="start|center_vertical"
                        android:inputType="text"
                        android:maxLength="20"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/uploadfee"
                        android:layout_marginTop="10dp"
                        android:padding="16dp"
                        android:hint="Car Fee"
                        android:gravity="start|center_vertical"
                        android:inputType="numberDecimal"
                        android:maxLength="10"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/uploadPhoneNumber"
                        android:layout_marginTop="10dp"
                        android:padding="16dp"
                        android:hint="Phone Number"
                        android:gravity="start|center_vertical"
                        android:inputType="phone"
                        android:maxLength="11"/>

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:minHeight="48dp"
                        android:padding="8dp"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Save"
                        android:id="@+id/saveButton"
                        android:textSize="18sp"
                        android:padding="12dp"
                        android:backgroundTint="@color/btn_color"
                        android:layout_marginTop="10dp"
                        app:cornerRadius="20dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>